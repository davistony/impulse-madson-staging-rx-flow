    .modalButtons .thirdColumn {
     text-align: right; 
    }
    .modalButtons .firstColumn {
     width: 40px; 
    }
    #showSecondScreen.disabled {
      pointer-events: none;
      opacity: 0.7;
    }
    .add-to-cart {
      margin-bottom: 38px;
    }
    .modal-content .product-block {
      margin-bottom: 0px;
    }
  </style>
